# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Agent0 Configuration - Connect directly to Okta (no local auth server)
# Use your actual Okta OIN app credentials for Agent0
OKTA_CLIENT_ID=your_agent0_client_id_here
OKTA_CLIENT_SECRET=your_agent0_client_secret_here
OKTA_ISSUER=https://your-org.okta.com
OKTA_DOMAIN=your-org.okta.com

# Todo0 / NCAA Stats Server - LOCAL Authorization Server (port 5001)
# This server handles token exchange, must run on port 5001
TODO0_CLIENT_ID=todo0
TODO0_CLIENT_SECRET=secret
TODO0_ISSUER=http://localhost:5001

# Token Exchange Audience - MUST be http://localhost:5001 (hardcoded in Okta)
# Okta expects this exact audience for managed connection token exchange
TODO0_OKTA_AUDIENCE=http://localhost:5001

# NextAuth
NEXTAUTH_SECRET=generate_a_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# MCP Server
MCP_SERVER_PATH=../ncaa-mcp-server/dist/server.js
